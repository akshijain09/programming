//Switch statement programmming Cpp
IBM
#include <iostream>

using namespace std;
int main(){
    int i=0;
    for(i=0;i<20;i++){         
            switch(i){
            case 0:i+=5;
            case 1:i+=2;
            case 5:i+=5;
            break;
            default:i+=4;
           
            
        }
        cout<<i<<" ";
}
    }


//// 12 ->break;
 //i=13 then again switch staement will run default case and in this also 17->break;
  //i=18  then again switch staement will run default case and in this also 22->break;
///The output of this code will be :- 12  17 22



#include <iostream>

using namespace std;
int main(){
    int i=0;
    for(i=0;i<20;i++){
        switch(i){
            case 0:i+=5;
            case 1:i+=2;
            case 5:i+=5;
           
            default:i+=4;
            break;
           
            
        }
        cout<<i<<" ";
}
    }


//16->break;
//i=17 then again switch staement will run default case and in this also 21->break;

///The output of this code will be :- 16 21

    
